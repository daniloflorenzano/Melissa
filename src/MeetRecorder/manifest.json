{
  "manifest_version": 2,
  "name": "Meet Recorder",
  "version": "1.0",
  "description": "Monitora reuniões Google Meet e comunica com app .NET para gravar áudio.",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "applications": {
    "gecko": {
      "id": "meetrecorder@exemplo.com"
    }
  }
}
