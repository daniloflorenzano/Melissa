<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Melissa.DesktopAvaloniaClient.ViewModels"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="150"
        Width="300" Height="150"
        x:Class="Melissa.DesktopAvaloniaClient.Views.SettingsWindow"
        Title="SettingsWindow"
        x:DataType="vm:SettingsViewModel">

    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="Endereço do Servidor:" FontWeight="Bold"/>
        <TextBox Text="{Binding ServerAddress}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0 10 0 0">
            <!-- Ao clicar em Salvar, o comando SaveCommand é acionado no ViewModel.
                 A janela se fecha no code-behind com um resultado 'true'. -->
            <Button Content="Salvar"
                    Command="{Binding SaveCommand}"
                    Classes="Accent"/>

            <!-- Ao clicar em Cancelar, a janela se fecha no code-behind com um resultado 'false'. -->
            <Button Content="Cancelar"
                    Command="{Binding CancelCommand}"
                    Classes="Flat"/>
        </StackPanel>
    </StackPanel>

</Window>